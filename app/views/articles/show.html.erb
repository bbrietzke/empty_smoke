
<div><ul><%= render @article %></ul></div>
<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", articles_path %>

  <%= button_to "Destroy this article", @article, method: :delete %>
</div>

<% if @article.activities %>
<h3>History</h3>
<div class='history'>
<% @article.activities.order('created_at desc').each do |act| %>
  <ul class='activities'>
    <% if act.key == 'article.update' %>
    <li class='activity'>Updated by <%= act.owner.name %>.</li>
    <% elsif act.key == 'article.create' %>
    <li class='activity'>Created by <%= act.owner.name %>.</li>
    <% else %>
    <li><%= act.inspect %></li>
    <% end %>
  </ul>
<% end %>
<% end %>
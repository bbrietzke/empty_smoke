<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.textarea :summary %>
  </div>

  <div>
    <%= form.label :votes, style: "display: block" %>
    <%= form.number_field :votes %>
  </div>

  <div>
    <%= form.label :published, style: "display: block" %>
    <%= form.checkbox :published %>
  </div>

  <div>
    <%= form.label :summarized, style: "display: block" %>
    <%= form.checkbox :summarized %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
